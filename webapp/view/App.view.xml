								id="welcomeCarousel"
								height="300px"
								showPageIndicator="false"
								loop="true">
								<pages>
									<VBox renderType="Bare">
										<Image
											src='https://enterpriseplatformsblog.com/wp-content/uploads/2017/08/SAP-Leonardo-.jpg'
											height="100%"/>
										<Text
											text="Leonardo 1"
											class="welcomeCarouselText"/>
									</VBox>
									<VBox renderType="Bare">
										<Image
											src='https://www.mindsetconsulting.com/wp-content/uploads/2017/06/leo1-1200x503.png'
											height="100%"/>
										<Text
											text="Leonardo 2"
											class="welcomeCarouselText"/>
									</VBox>
								</pages>
							</Carousel>
			            </l:BlockLayoutCell>
				   	</l:BlockLayoutRow>
			   		<!-- Showcases by Technology -->
			        <l:BlockLayoutRow>
			            <l:BlockLayoutCell id="cell-1"
			                               title="{i18n>technologyCategory}"
			                               titleAlignment="Left"
			                               backgroundColorSet="ColorSet9"
			                               backgroundColorShade="ShadeA">
			              
			            </l:BlockLayoutCell>
			        </l:BlockLayoutRow>
			        <!-- Tehcnology First Row -->
			        <l:BlockLayoutRow>
			            <l:BlockLayoutCell class="customCellImageBackground"
			                               backgroundColorSet="ColorSet11"
			                               backgroundColorShade="ShadeD">
