			            		<core:Icon
									src="sap-icon://role"
									size="2.5rem"
									color="Default"/>
			            		<Title
									text="{i18n>tech01}"
									titleStyle="H2"
									class="sapUiTinyMarginTopBottom"/>
				                <Text text="{i18n>tech01_text}"/>
			                	<Link text="Demo Link"/>
			            	</l:VerticalLayout>
			            </l:BlockLayoutCell>
